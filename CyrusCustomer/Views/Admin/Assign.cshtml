@model AssignViewModel

<h2>Assign Customers to Users</h2>

<!-- Dropdown for selecting a user -->
<form asp-action="AssignCustomers" method="post">
    <div class="form-group">
        <label for="SelectedUserId">Select User:</label>
        <select asp-for="SelectedUserId" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))" class="form-control">
            <option value="">-- Select User --</option>
        </select>
    </div>

